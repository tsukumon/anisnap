          type:'POST',
          url:'/postlike/<%= review.id %>/destroy'
        });
      });

      $('.review-review-good' + '#good-btn-<%= review.id %>').on('click',function(){
        $.ajax({
            type:'POST',
            url:'/postlike/<%= review.id %>/create/good'
          });
        });

      	 });
</script>


<% else %>

<% @goodcount = Postlike.where(like: 'good' , review_id: review.id).count %>
