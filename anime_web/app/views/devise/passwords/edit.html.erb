<div class="top-wrapper">
  </div><!--topwrpaeer-->

<div class="login-wrapper"><!--サイド＆＆全体-->

  <div class="login-wrapper-midasi-area">
    <div class="login-wrapper-midasi">パスワードの再設定</div>
    </div>
  <div class="user-input-area-m2-area"><!--中央揃え-->



    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>


  <div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
    <div class="user-input-area-h3">新しいパスワード</div>
  <div class="user-login-input-area-in"><%= f.password_field :password, autofocus: true, autocomplete: "new-password" %></div>
  <div class="user-input-area-text"></div>
  </div><!--ユーザーID入力欄終了-->


  <div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
    <div class="user-input-area-h3">新しいパスワード(確認)</div>
  <div class="user-login-input-area-in"><%= f.password_field :password_confirmation, autocomplete: "off" %></div>
  <div class="user-input-area-text"></div>
  </div><!--ユーザーID入力欄終了-->


  <div class="actions-login-or-singup-new">
    <div class="login-form-botan-new"><%= f.submit "パスワードを変更する" %></div>
  </div>
  
<% end %>







</div><!--中央揃え終了-->
</div><!--wrapper-->
