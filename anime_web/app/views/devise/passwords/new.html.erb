  <div class="user-input-area-text"></div>
    </div>
  </div><!--ユーザーID入力欄終了-->


  <div class="actions-login-or-singup-new">
    <div class="login-form-botan"><%= f.submit "メールを送信" %></div>
  </div>
</div><!--中央揃え終了-->
<% end %>


</div><!--wrapper-->
