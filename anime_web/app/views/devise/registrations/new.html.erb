<div class="top-wrapper">
  </div><!--topwrpaeer-->

<div class="login-wrapper"><!--サイド＆＆全体-->

  <div class="login-wrapper-midasi-area">
    <div class="login-wrapper-midasi">新規登録</div>
    </div>
  <div class="user-input-area-m2-area"><!--中央揃え-->



    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <%= render "devise/shared/error_messages", resource: resource %>


  <div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
    <div class="user-input-area-datails">
  <div class="user-input-area-in-m2"><%= f.text_field :username, autofocus: true ,placeholder: 'ユーザー名' %></div>
  <div class="user-input-area-text"></div>
    </div>
      </div><!--ユーザーID入力欄終了-->

    <div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
      <div class="user-input-area-datails">
    <div class="user-input-area-in-m2"><%= f.text_field :userid, autofocus: true ,placeholder: 'ユーザーID（英数字で3文字以上）' %></div>
      </div>
  </div><!--ユーザーID入力欄終了-->


  <div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
      <div class="user-input-area-datails">
  <div class="user-input-area-in-m2"><%= f.email_field :email, autofocus: true, autocomplete: "email"  ,placeholder: 'メールアドレス' %></div>
  <div class="user-input-area-text">登録後、入力したメールアドレスに認証メールを送信します。</div>
    </div>
  </div><!--ユーザーID入力欄終了-->


<div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
  <div class="user-input-area-datails">
<div class="user-input-area-in-m2"><%= f.password_field :password, autocomplete: "new-password"  ,placeholder: 'パスワード（英数字で6文字以上）' %></div>
</div>
</div><!--ユーザーID入力欄終了-->


<div class="user-input-area-m2"><!--ユーザーID入力欄開始-->
<div class="user-input-area-in-m2"><%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: 'パスワード（確認）'  %></div>
<div class="user-input-area-text"></div>
</div><!--ユーザーID入力欄終了-->



  <div class="actions-login-or-singup-new">
    <div class="login-form-botan-new"><%= f.submit "新規登録" %></div>
  </div>

  <div class="user-login-help-m2"><%= link_to("/users/sign_in") do %>既にアカウントを持っていますか？<% end %></div>

<% end %>







</div><!--中央揃え終了-->
</div><!--wrapper-->
